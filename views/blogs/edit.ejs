<div class="container page-addpost p-3 shadow">
    <form action="/travel/<%= post._id %>/?_method=PUT" method="POST" class="p-2" enctype="multipart/form-data">
        <h3 class="text-center mt-lg-2 mt-md-4 mt-sm-4 ">สร้างบทความ</h3>
        <div class="form-group">
              <label for="text">หัวเรื่อง :</label>
              <input type="text" class="form-control" name="title" value="<%= post.title %>" autocomplete="off" required>
        </div>
        <div class="row">
            <div class="col-lg-6 col-12">
                <p>ภาพหน้าปก :</p>
                <div class=" mb-3" >
                    <input type="file" name="img_title" id="img_preview" class="form-control-file">
                    <div class="pt-2">
                        <img src="/images/posts/<%= post.image %>" id="img_show" alt="" style="width: 100%; height: auto;">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="form-group">
                    <label for="Catelog">หมวดหมู่ :</label>
                    <select class="form-control"name="category" required>
                        <option value="<%= post.category %>"><%= post.category %></option>
                        <option name="ที่กิน">ที่กิน</option>
                        <option name="ที่เที่ยว">ที่เที่ยว</option>
                        <option name="ที่พัก">ที่พัก</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="text">แท็ก :</label>
                    <input type="text" class="form-control autocomplete" value="<%= tagsOfpost %>" data-tags="<%= Arraytag %>" id="tags" autocomplete="off" name="tags" required>
                </div>
        
                <div class="form-group">
                    <label for="text">งบประมาณ :</label>
                    <% Allprice.forEach(function(price){ %>
                        <div class="form-check">
                            <% if(price.maximum_price == post.minimum_cost ){%> 
                            <input class="form-check-input" type="radio" name="length_price" value="<%= price.maximum_price%>" checked>
                            <label class="form-check-label">ขั้นต่ำ <%= price.maximum_price %> บาท</label>
                            <% }else{ %> 
                                <input class="form-check-input" type="radio" name="length_price" value="<%= price.maximum_price%>">
                                <label class="form-check-label">ขั้นต่ำ <%= price.maximum_price %> บาท</label>  
                            <% } %> 
                        </div>
                    <% }) %>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="length_price" value="">
                            <label class="form-check-label">ไม่จำกัด</label>
                        </div>
                </div>
        
                <div class="form-group">
                    <label for="provinces">จังหวัด :</label>
                    <select class="form-control" name="provinces" required>
                            <option value="<%= post.province %>"><%= post.province %></option>
                        <% AllProvinces.forEach(function(province){ %>
                            <option name="<%= province.name %>"><%= province.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class=""> 
                <label for="">วันที่เปิด</label>
                <div class="col-12">
