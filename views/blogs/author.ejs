<%- include("../layout/header") %>
<%- include("../layout/layoutnavbar") %>

<section class="container shadow"> 
    <div class="container profile-section">
        <div class="pt-2">
            <figure class="m-auto img-profile">
                <img src="https://res.cloudinary.com/dvzib8cte/image/upload/v1593015941/<%= author.image %>" alt="" class="" id="myImg">
            </figure>
        </div>
        <div>
            <div class="card bg-white p-4">
                <h3><%= author.username %></h3>
            <h6><i class="fab fa-facebook-square"></i>&nbsp;Facebook : <% if(author.contact.facebook) {%> <a href="<%= author.contact.facebook %>" target="_blank">คลิกที่นี่</a><% } %> </h6>
                    <h6><i class="fab fa-line"></i>&nbsp;ID Line : <%= author.contact.line %></h6>
                    <h6><i class="fas fa-phone"></i>&nbsp;Phone : <%= author.contact.phone %> </h6>
            </div>
        </div>
    </div>
    <hr>
    <% if(profile.length > 0){ %>
        <div class="p-4 bg-white">
            <h3>ทั้งหมด <%= profile.length %> บทความ</h3>
                <hr>
                  <div class="row">
                    <% for(var i=0; i < (profile.length); i++) { %>
                    <article class="col-lg-3 col-md-4 col-6 pb-3">
                      <a href="/travel/review/<%= profile[i]._id %>">
                        <div class="card">
                          <img src="https://res.cloudinary.com/dvzib8cte/image/upload/v1593015941/<%= profile[i].image %>.jpg" alt="" class="img-crop-pageprofile" >
                          <div class="p-2">
                            <h5><%= profile[i].title %></h5>
                            <div class="mt-auto viewOfPost">
                              <span class="fas fa-eye"><%= profile[i].views %></span>
                            </div>
                          </div>
                        </div>
                      </a>     
                    </article>
                    <% } %>
                  </div>
        </div>
        <% } %>   
        <% if(profile.length <= 0){ %>
          <div class="col-md-9 col-12 text-center">
              <h2>ไม่มีบทความ</h2>
          </div>
        <% } %>
</section>

<%- include("../layout/footer") %>