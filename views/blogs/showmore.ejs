<%- include("../layout/header") %>
<%- include("../layout/layoutnavbar") %>  
<div class="container p-4 bg-white" style="min-height: 1500px;">
    <% if(posts.length > 0) {%> 
    <div class="mt-3 mb-3">
        <h3>บทความ : <%= posts[0].category %></h3>
    </div>
    
    <div class="row">
        <% for(var i=0; i < (posts.length); i++) { %>
            <article class="col-md-4 col-12 pb-3">
              <a href="/travel/review/<%= posts[i]._id %>">
                <div class="card">
                  <img src="/images/posts/<%= posts[i].image %>" alt="" style="height: 200px;" id="imgpageprofile" class="img-crop" >
                  <div class="p-2">
                    <h5><%= posts[i].title %></h5>
                    <div class="mt-auto viewOfPost">
                      <i class="fa fa-eye"> <%= posts[i].views.length %> </i>
                    </div>
                  </div>
                </div>
              </a>     
            </article>
        <% } %>
    </div>
    <% } %>
    <% if(posts.length <= 0) {%> 
      <div class="text-center mt-3">
        <h2>ยังไม่มีบทความ</h2>
      </div>
    <% } %> 
</div>
<%- include("../layout/footer") %>  