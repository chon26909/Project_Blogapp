<%- include("../layout/header") %>
<%- include("../layout/layoutnavbar") %>

  <!-- slide header -->
  <section class="p-0">
    <div id="demo" class="container carousel slide shadow" data-ride="carousel">
      <!-- Indicators -->
      <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
      </ul>
      
      <!-- The slideshow -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <a href="">
            <img src="/images/slideshow/slide1.jpg" alt="" height="300" width="auto">
          </a>
        </div>
        <div class="carousel-item">
          <a href="">
            <img src="/images/slideshow/slide2.jpg" alt="" height="300" width="auto"> 
          </a>
        </div>
        <div class="carousel-item">
          <a href="">
            <img src="/images/slideshow/slide3.jpg" alt="" height="300" width="auto">
          </a>
        </div>
      </div>
      
      <!-- Left and right controls -->
      <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>
    </div>
  </section>
  
  <section>
    <div class="container">
          <!-- content section 1-->
          <section class="section-content1 shadow">
            <div class=" blog-group-contect mt-3 p-lg-3 p-1">
              <div class="title-section mt-1 p-2">
                <h3>
                  <i class="far fa-newspaper"></i>
                  <a href="/travel/category/ที่กิน">
                    ที่กิน&nbsp;<i class="fas fa-angle-right"></i>
                  </a>
                </h3>
                <hr>
              </div>
              
              <div class="row m-0">
                <% for(let i=0; i < section1.length ; i++) { %> 
                  <article class="col-xl-3 col-lg-4 col-md-6 col-6 p-1 p-lg-2">
                    <a href="/travel/review/<%= section1[i]._id %>">
                      <div class="card">
                        <img src="/images/posts/<%= section1[i].image %>" alt="" class="img-crop-section1">
                        <div class="desc-card">
                          <h5><%= description(section1[i].title,50) %></h5>
                          <div class="mt-auto">
                            <span class="viewOfPost">
                              <i class="fa fa-eye"></i><span> <%= section1[i].views.length %></span>
                            </span>
                          </div>
                        </div>
                      </div>
                    </a>     
                  </article>
                <% } %> 
          </section>
    </div>
  </section>
  
