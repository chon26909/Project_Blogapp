
<div class="header-navbar p-0 shadow">
    
    <div class="menu-toggle">
        <div class="btn-toggle-category"><i class="fa fa-bars"></i></div>
        <div class="logo-for-moblie"></div>
        <div class="btn-toggle-user"><i class="fas fa-user"></i></div>
    </div>
    
    <nav class="navbar-top">
        <div class="container">
            <div style="color: white; font-size: small;">
                <span><i class="fa fa-calendar-alt"></i>&nbsp;<%= moment(MomentDate).format("DD MMMM YYYY") %></span>         
            </div>
            <% if(locals.user){ %>
            <div class="tool">
                <a href="/travel/new"><i class="fa fa-pencil-alt"></i>เขียนบทความ</a>
            </div>
            <div class="dropdown-user" >
                <div onclick="clicktoDropdownUser()" class="dropbtn-user">
                    <img src="https://res.cloudinary.com/dvzib8cte/image/upload/v1593015941/<%= user.image %>" alt="" class="img-user-navbar"> <%= description(user.username,10) %></img> <i class="fa fa-sort-down fa-1x" style="padding-bottom: 3px;"></i>
                </div>
                <div id="submenuUser" class="dropdown-itemOfUSer">
                    <a href="/user/me"><i class="fa fa-list-alt"></i><span>บทความของฉัน</span></a>
                    <a href="/user/saved"><i class="fa fa-bookmark"></i><span>ที่บันทึกไว้</span></a>
                    <a href="/user/edit"><i class="fas fa-cog"></i><span>ตั้งค่าโปรไฟล์</span></a>
                    <% if(user.permission == "admin") {%> 
                    <a href="/admin"><i class="fa fa-user-cog"></i><span>จัดการเว็บไซด์</span></a>
                    <% } %> 
                    <a href="/logout"><i class="fa fa-sign-out-alt"></i><span>ออกจากระบบ</span></a>
                </div>
            </div>
            
            <% } %>
            <% if(!locals.user){ %>
            &nbsp;
            <div style="justify-self: end;">
                <a href="/login" style="color: white; text-decoration: none;"><i class="fa fa-user"></i> ลงชื่อเข้าใช้</a>
            </div>
            <% } %>
        </div>
    </nav>

        
    <div class="logo-web">
        <div class="container">
            <a href="/travel">
                <figure class="logo-web-image">
                   
                    <div>
                        <img src="/images/teaw-pa-plern2.3.png" class="logo-website-img">
                    </div>
                    
                    <div class="logo-text">เที่ยวพาเพลิน</div>
                     <div></div>
                </figure>
            </a>
        </div>
    </div>

    <nav class="navbar-category">
        <div class="container">
            <ul>
